{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["unplugin-vue-router/client"]
  },
  "include": [
    "src",
    "./typed-router.d.ts"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
